<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.zhanghao.core.ui.CustomEditext
        android:id="@+id/edt1"
        android:layout_width="200dp"
        android:layout_height="40dp"
        app:hint="秦输入内容"
        app:background="@drawable/shape_input"
        app:leftImage="@drawable/ic_dynamic"
        app:rightImage="@drawable/ic_dynamic"></com.zhanghao.core.ui.CustomEditext>


    <com.zhanghao.core.ui.CustomEditext
        android:id="@+id/edt2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        app:hint="秦输入内容"
        android:layout_marginTop="@dimen/x70"
        app:background="@drawable/shape_input"
        app:leftImage="@drawable/ic_dynamic"
        app:rightImage="@drawable/ic_dynamic"></com.zhanghao.core.ui.CustomEditext>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>

</LinearLayout>